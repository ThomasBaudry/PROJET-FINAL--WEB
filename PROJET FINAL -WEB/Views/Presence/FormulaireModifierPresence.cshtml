@using PROJET_FINAL__WEB.Models
@model PresenceDTO;
@*Si erreur du côté serveur... affichage du message d'erreur...*@
@if (ViewBag.MessageErreur != null)
{
    <br />
    <h2 class="alert-danger">@ViewBag.MessageErreur</h2>
}
else
{
    <br />
    <h3>Modifier une Présence : </h3>
    <br />
    <form asp-controller="Presence" asp-action="ModifierPresence" method="post">
        <table>
            <tr class="input-group input-group-sm mb-3">
                <td>
                    <label asp-for="DateTemps" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"></label>
                </td>
                <td>
                    <input asp-for="DateTemps" readonly type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"/>
                </td>
            </tr>
            <tr class="input-group input-group-sm mb-3">
                <td>
                    <label asp-for="Enfant" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"></label>
                </td>
                <td>
                    <select asp-for="Enfant.Nom" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        @foreach (EnfantDTO enfant in ViewBag.ListeEnfants)
                        {
                            if (enfant.Nom == ViewBag.NomEnfant)
                            {
                                <option selected>@enfant.Nom</option>
                            }
                            else
                            {
                                <option>@enfant.Nom</option>
}
                        }
                    </select>
                </td>
                <td>
                    <label asp-for="Educateur" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default"></label>
                </td>
                <td>
                    <select asp-for="Educateur.Nom" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        @foreach (EducateurDTO educateur in ViewBag.ListeEducateurs)
                        {
                            if (educateur.Nom == ViewBag.NomEducateur)
                            {
                                <option selected>@educateur.Nom</option>
                            }
                            else
                            {
                                <option>@educateur.Nom</option>
}
                        }
                    </select>
                </td>
            </tr>
            <tr class="input-group input-group-sm mb-3">
                <td>
                    <input type="submit" value="Modifier" onclick="document.getElementById('nomEnfant').value ='@ViewBag.nomEnfant';" class="btn btn-outline-success"/>
                </td>
                <td>
                    <input type="button" value="Annuler" onclick="history.back();" class="btn btn-outline-primary"/>
                </td>
            </tr>
        </table>
        <input id="nomGarderie" name="nomGarderie" type="hidden"/>
    </form>
}