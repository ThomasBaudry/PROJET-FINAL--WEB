@using PROJET_FINAL__WEB.Models
@model GarderieDTO;
@*Si erreur du côté serveur... affichage du message d'erreur...*@
@if (ViewBag.MessageErreur != null)
{
    <br />
    <h2 class="alert-danger">@ViewBag.MessageErreur</h2>
}
else
{
    @*Affichage de la liste des cégeps...*@
    <br />
    <h3>Liste des garderie(s) (@ViewBag.ListeGarderies.Length Cégep(s)) :</h3>
    <br />
    <form asp-controller="" asp-action="" method="post">
        <table>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Province</th>
                <th>Code Postal</th>
                <th>Téléphone</th>
                <th>Courriel</th>
                @if(ViewBag.ListeCegeps.Length > 0)
                {
                    <th><input value="Vider la Liste" onclick="if(confirm('Voulez-vous vraiment vider la liste?')==true){this.form.action='/Cegep/ViderListeCegep'; this.form.method='post'; submit();}" type="button" /></th>
                }
            </tr>
            @foreach (CegepDTO cegep in ViewBag.ListeCegeps)
            {
                <tr>
                    <td>@cegep.Nom</td>
                    <td>@cegep.Adresse</td>
                    <td>@cegep.Ville</td>
                    <td>@cegep.Province</td>
                    <td>@cegep.CodePostal</td>
                    <td>@cegep.Telephone</td>
                    <td>@cegep.Courriel</td>
                    <td><input value="Modifier" onclick="document.getElementById('nomCegep').value ='@cegep.Nom'; this.form.action='/Cegep/FormulaireModifierCegep'; this.form.method='get'; submit();" type="button" /></td>
                    <td><input value="Supprimer" onclick="document.getElementById('nomCegep').value ='@cegep.Nom';if(confirm('Voulez-vous vraiment supprimer le Cégep?')==true){this.form.action='/Cegep/SupprimerCegep'; this.form.method='post'; submit();}" type="button" /></td>
                </tr>
            }
        </table>
        <input id="nomCegep" name="nomCegep" type="hidden"/>
    </form>
    <br />
    <b>Ajouter un cégep : </b>
    <br />
    <br />
    <form asp-controller="Cegep" asp-action="AjouterCegep" method="post">
        <table>
            <tr>
                <td>
                    <label asp-for="Nom"></label>
                </td>
                <td>
                    <input asp-for="Nom" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Adresse"></label>
                </td>
                <td>
                    <input asp-for="Adresse" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Ville"></label>
                </td>
                <td>
                    <input asp-for="Ville" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Province"></label>
                </td>
                <td>
                    <input asp-for="Province" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="CodePostal"></label>
                </td>
                <td>
                    <input asp-for="CodePostal" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Telephone"></label>
                </td>
                <td>
                    <input asp-for="Telephone" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Courriel"></label>
                </td>
                <td>
                    <input asp-for="Courriel" />
                </td>
            </tr>
        </table>
        <input type="submit" value="Ajouter" />
    </form>
    <br/>
}
