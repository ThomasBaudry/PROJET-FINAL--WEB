@using PROJET_FINAL__WEB.Models
@model EnfantDTO;
@*Si erreur du côté serveur... affichage du message d'erreur...*@
@if (ViewBag.MessageErreur != null)
{
    <br />
    <h2 class="alert-danger">@ViewBag.MessageErreur</h2>
}
else
{
    @*Affichage de la liste des Enfants...*@
    <br />
    <h3>Liste des enfant(s) (@ViewBag.ListeEnfants.Length Enfant(s)) :</h3>
    <br />
    <form asp-controller="" asp-action="" method="post">
        <table>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date de Naissance</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Province</th>
                <th>Téléphone</th>
                @if(ViewBag.ListeEnfants.Length > 0)
                {
                    <th><input value="Vider la Liste" onclick="if(confirm('Voulez-vous vraiment vider la liste?')==true){this.form.action='/Enfant/ViderListeEnfant'; this.form.method='post'; submit();}" type="button" /></th>
                }
            </tr>
            @foreach (EnfantDTO enfant in ViewBag.ListeEnfants)
            {
                <tr>
                    <td>@enfant.Nom</td>
                    <td>@enfant.Prenom</td>
                    <td>@enfant.DateNaissance</td>
                    <td>@enfant.Adresse</td>
                    <td>@enfant.Ville</td>
                    <td>@enfant.Province</td>
                    <td>@enfant.Telephone</td>
                    <td><input value="Modifier" onclick="document.getElementById('nomEnfant').value ='@enfant.Nom'; this.form.action='/Enfant/FormulaireModifierEnfant'; this.form.method='get'; submit();" type="button" /></td>
                    <td><input value="Supprimer" onclick="document.getElementById('nomEnfant').value ='@enfant.Nom';if(confirm('Voulez-vous vraiment supprimer l°Enfant?')==true){this.form.action='/Enfant/SupprimerEnfant'; this.form.method='post'; submit();}" type="button" /></td>
                </tr>
            }
        </table>
        <input id="nomEnfant" name="nomEnfant" type="hidden"/>
    </form>
    <br />
    <b>Ajouter un Enfant: </b>
    <br />
    <br />
    <form asp-controller="Enfant" asp-action="AjouterEnfant" method="post">
        <table>
            <tr>
                <td>
                    <label asp-for="Nom"></label>
                </td>
                <td>
                    <input asp-for="Nom" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Prenom"></label>
                </td>
                <td>
                    <input asp-for="Prenom" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="DateNaissance"></label>
                </td>
                <td>
                    <input asp-for="DateNaissance" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Adresse"></label>
                </td>
                <td>
                    <input asp-for="Adresse" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Ville"></label>
                </td>
                <td>
                    <input asp-for="Ville" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Province"></label>
                </td>
                <td>
                    <input asp-for="Province" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Telephone"></label>
                </td>
                <td>
                    <input asp-for="Telephone" />
                </td>
            </tr>
        </table>
        <input type="submit" value="Ajouter" />
    </form>
    <br/>
}
